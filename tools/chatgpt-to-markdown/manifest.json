{
  "manifest_version": 3,
  "name": "ChatGPT to Markdown",
  "version": "0.1.0",
  "description": "Extracts the last ChatGPT response, wraps it in Markdown, and downloads it.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT to Markdown"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
